# Anticca - Environment Variables

# Shopier Classic API (for payment form POST)
SHOPIER_API_KEY=your_shopier_api_key
SHOPIER_API_SECRET=your_shopier_api_secret

# Shopier V2 REST API (JWT Personal Access Token for order management)
SHOPIER_ACCESS_TOKEN=your_shopier_jwt_token

# Shopier Callback URL (Firebase Functions endpoint)
SHOPIER_CALLBACK_URL=https://europe-west1-anticcareale.cloudfunctions.net/shopierCallback

# Frontend URL (for redirect after payment)
FRONTEND_URL=https://anticcareale.web.app
